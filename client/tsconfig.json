{
  "compilerOptions": {
    "target": "es5",
    "types": ["node"], 
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,  // Optional: Remove if you're working only with TypeScript files
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,  // Keep this if you're using a bundler that handles TypeScript transpilation
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
